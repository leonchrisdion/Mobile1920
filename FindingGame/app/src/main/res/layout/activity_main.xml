<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/instructionTitle"
            android:layout_width="140dp"
            android:layout_height="43dp"
            android:layout_marginStart="@dimen/margin_wide"
            android:fontFamily="@font/roboto"
            android:text="@string/instruction_title"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/instructionBody"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/instructionBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto"
            android:text="@string/instruction_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/instructionTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/box_one"
            style="@style/white_box"
            android:layout_width="77dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="@dimen/margin_wide"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/box_two"
            style="@style/white_box"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/box_one" />

        <TextView
            android:id="@+id/box_three"
            style="@style/white_box"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="216dp"
            app:layout_constraintBottom_toTopOf="@+id/box_four"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/box_one" />

        <TextView
            android:id="@+id/box_four"
            style="@style/white_box"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/margin_wide"
            android:layout_marginEnd="216dp"
            android:layout_marginBottom="@dimen/margin_wide"
            app:layout_constraintBottom_toTopOf="@+id/box_five"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/box_three" />

        <TextView
            android:id="@+id/box_five"
            style="@style/white_box"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/box_three" />

        <TextView
            android:id="@+id/box_six"
            style="@style/white_box"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/margin_wide"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="@dimen/margin_wide"
            app:layout_constraintBottom_toTopOf="@+id/box_four"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/box_five"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/box_seven"
            style="@style/white_box"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toTopOf="@+id/box_six"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/box_five"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/box_eight"
            style="@style/white_box"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/margin_wide"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="@dimen/margin_wide"
            app:layout_constraintBottom_toTopOf="@+id/box_six"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/box_seven"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>